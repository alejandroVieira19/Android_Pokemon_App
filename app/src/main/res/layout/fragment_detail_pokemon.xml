<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="detailPokemonFragment"
            type="com.pokemon_app.presentation.ui.view.DetailPokemonFragment" />
    </data>

<LinearLayout
    android:id="@+id/detailFragmentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="#EE8130"
    tools:context=".presentation.ui.view.DetailPokemonFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPokemonName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_weight="3"
            android:fontFamily="sans-serif-medium"
            android:text=""
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            android:clickable="true"
            tools:text="Bulbasaur" />

        <ImageView
            android:id="@+id/ivDetailFavoritePokemonIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="@{() -> detailPokemonFragment.onFavoritePokemonToggle()}"
            android:contentDescription="@string/favorite_star"
            app:srcCompat="@android:drawable/star_off"
            tools:ignore="TouchTargetSizeCheck,ImageContrastCheck"
            tools:srcCompat="@android:drawable/btn_star_big_on" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivDetailPokemonImage"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/pokemon_image"
            android:src="@drawable/charizard"
            tools:ignore="ImageContrastCheck" />



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="12dp">


            <!-- Fundo interno com blur/sombra simulada -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_background_blur"
                android:orientation="vertical">


                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragmentContainerView"
                    android:name="com.pokemon_app.presentation.ui.view.AboutMeDetailedPokemonFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout="@layout/fragment_about_detailed_pokemon" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/textAboutMe"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:paddingVertical="12dp"
                        android:background="@drawable/card_background_blur"
                        android:text="@string/about_me"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:onClick="@{() -> detailPokemonFragment.onAboutMeClick()}"
                        android:foreground="?attr/selectableItemBackground"
                        />

                    <TextView
                        android:id="@+id/movesBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:paddingVertical="12dp"
                        android:background="@color/transparent"
                        android:text="@string/moves"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:onClick="@{() -> detailPokemonFragment.onMovesClick()}"
                        android:foreground="?attr/selectableItemBackground"
                        />

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>


</LinearLayout>

</layout>