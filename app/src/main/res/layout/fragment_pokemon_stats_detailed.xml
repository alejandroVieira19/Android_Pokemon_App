<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".presentation.ui.view.detail.PokemonStatsDetailedFragment"
        tools:background="@color/my_dark_color_secondary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                android:text="HP: " />

            <ProgressBar
                android:id="@+id/progressBarHP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="20dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:visibility="visible"
                android:progressBackgroundTint="@color/pikachu_black"
                android:progressTint="@color/colorOnline"
                android:max="100"
                android:progress="0"
                tools:progress="65"/>

            <TextView
                android:id="@+id/pokemonHpNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginEnd="20dp"
                tools:text="65" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/attack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                android:text="Attack: " />

            <ProgressBar
                android:id="@+id/favoritesProgressAttack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="20dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progressBackgroundTint="@color/pikachu_black"
                android:progressTint="#F44336"
                android:visibility="visible"
                android:max="100"
                android:progress="0"
                tools:progress="65"/>

            <TextView
                android:id="@+id/pokemonAttackNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginEnd="20dp"
                android:textColor="@color/white"
                android:layout_marginHorizontal="10dp"
                tools:text="65" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/defense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                android:text="Defense: " />

            <ProgressBar
                android:id="@+id/favoritesProgressDefense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="20dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:visibility="visible"
                android:progressBackgroundTint="@color/pikachu_black"
                android:progressTint="#2196F3"
                android:max="100"
                android:progress="0"
                tools:progress="65"/>

            <TextView
                android:id="@+id/pokemonDefenseNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginEnd="20dp"
                android:layout_marginHorizontal="10dp"
                tools:text="65" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                android:text="Speed: " />

            <ProgressBar
                android:id="@+id/favoritesProgressSpeed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="20dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progressBackgroundTint="@color/pikachu_black"
                android:progressTint="#FFEB3B"
                android:visibility="visible"
                android:max="100"
                android:progress="0"
                tools:progress="65"/>

            <TextView
                android:id="@+id/pokemonSpeedNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginEnd="20dp"
                android:layout_marginHorizontal="10dp"
                tools:text="65" />
        </LinearLayout>

    </LinearLayout>

</layout>
